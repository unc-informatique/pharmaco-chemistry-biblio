      "type": "single",
      "fields": [
        "cutoff"
      ],
      "bind": {
        "input": "range",
        "max": 1000,
        "min": 0,
        "name": "papers threshold ",
        "step": 1
      },
      "init": {
        "cutoff": 0
      }
    }
  },
  "transform": [
    {
      "filter": "selection.com == datum.com && datum.value >= slider.cutoff[0]"
    }
  ],
  "width": 900,
