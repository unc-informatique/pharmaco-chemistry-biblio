{
  "config": {
    "view": {
      "continuousWidth": 711,
      "continuousHeight": 400
    }
  },
  "data": {
    "url": "data/vbar_data.json"
  },
  "mark": "bar",
  "encoding": {
    "color": {
      "field": "class",
      "scale": {
        "domain": ["abiotic", "abiotic", "abiotic", "abiotic", "abiotic", "abiotic", "biotic", "biotic", "biotic", "biotic", "biotic", "biotic", "biotic", "biotic", "biotic", "biotic", "biotic", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "pharmaco", "toxicity"]
      },
      "type": "nominal"
    },
    "tooltip": [
      {
        "field": "acti",
        "type": "nominal"
      },
      {
        "field": "value",
        "type": "quantitative"
      },
      {
        "field": "class",
        "type": "nominal"
      }
    ],
    "x": {
      "field": "acti",
      "type": "nominal"
    },
    "y": {
      "field": "value",
      "type": "quantitative"
    }
  },
  "height": 700,
  "selection": {
    "selection": {
      "type": "single",
      "fields": [
        "com"
      ],
      "bind": {
        "input": "select",
        "options": ["benzylamine", "colchicine", "cyclopeptide", "imidazole", "indole", "indolizidine", "isoquinoline", "isoxazole", "muscarine", "oxazole", "phenylethylamine", "piperidine", "purine", "putrescine", "pyridine", "pyrrolidine", "pyrrolizidine", "quinazoline", "quinoline", "quinolizidine", "spermidine", "spermine", "thiazole", "tropane", "lactones/strigolactones", "acetophenone", "anthraquinone", "coumarin", "flavonoids/…", "isoflavanoids", "lignans", "naphthoquinone", "phenolic acid", "phenylpropanoid", "stilbene", "tannin", "xanthone", "acetogenin", "ansamycin", "macrolide", "polyene", "polyether", "tetracycline", "sterols/cardenolides", "sulphur compounds/…", "diterpene", "hemiterpene", "monoterpene", "norisoprenoid", "polyterpene", "sesquiterpene", "sesterterpene", "tetraterpene/…", "triterpene/saponin"],
        "name": "Compound "
      },
      "init": {
        "com": "benzylamine"
      }
    },
    "slider": {
      "type": "single",
      "fields": [
        "cutoff"
      ],
      "bind": {
        "input": "range",
        "max": 1024,
        "min": 0,
        "name": "Min. number of papers",
        "step": 2
      },
      "init": {
        "cutoff": 0
      }
    }
  },
  "transform": [
    {
      "filter": "selection.com == datum.com && datum.value >= slider.cutoff[0]"
    }
  ],
  "width": 900,
  "$schema": "https://vega.github.io/schema/vega-lite/v5.5.0.json"
}
